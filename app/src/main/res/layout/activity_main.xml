<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="72dp"
    tools:context="edu.aku.hassannaqvi.rhdisease.activities.OtherActivities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- Login progress -->

        <TextView
            android:id="@+id/lblheader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"
            android:background="@color/dullWhile"
            android:text="Main Menu"
            android:textColor="@color/mintDark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblMainMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="16dp"
            android:text="Main Menu"
            android:background="@color/mintDark"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/recordSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/black"
            android:padding="20dp"
            android:text="Records Summary"
            android:textColor="@color/green"
            android:textSize="14sp"
            android:typeface="monospace"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/openForm"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:background="@color/dullWhileOverlay"
                    android:orientation="vertical"
                    android:onClick="openForm"
                    android:clickable="true"
                    >

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/screeningicon" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:elevation="5dp"
                            android:gravity="center"
                            android:layout_gravity="bottom|left"
                            android:text="Form 05 "
                            android:paddingBottom="0dp"
                            android:textColor="@color/mintDark"
                            android:textSize="20sp"
                            android:textStyle="italic" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/mint"
                        android:elevation="5dp"
                        android:gravity="center"
                        android:paddingTop="0dp"
                        android:text="Screening"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <Space
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:id="@+id/openForm8"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:background="@color/dullWhileOverlay"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:onClick="openForm8">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/ultrasound1" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:elevation="5dp"
                            android:gravity="center"
                            android:layout_gravity="bottom|left"
                            android:text="Form 08 "
                            android:paddingBottom="0dp"
                            android:textColor="@color/mintDark"
                            android:textSize="20sp"
                            android:textStyle="italic" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/mint"
                        android:elevation="5dp"
                        android:gravity="center"
                        android:paddingTop="0dp"
                        android:text="Ultrasound"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/openForm9"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:onClick="openForm9"
                    android:clickable="true"
                    android:background="@color/dullWhileOverlay"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/poct" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:elevation="5dp"
                            android:gravity="center"
                            android:layout_gravity="bottom|left"
                            android:text="Form 09 "
                            android:paddingBottom="0dp"
                            android:textColor="@color/mintDark"
                            android:textSize="20sp"
                            android:textStyle="italic" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/mint"
                        android:elevation="5dp"
                        android:gravity="center"
                        android:paddingTop="0dp"
                        android:text="POCT Acceptance"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <Space
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:id="@+id/openForm11"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:background="@color/dullWhileOverlay"
                    android:orientation="vertical"
                    android:onClick="openForm11"
                    >
                    <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/prophylaxis" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:elevation="5dp"
                            android:gravity="center"
                            android:layout_gravity="bottom|left"
                            android:text="Form 10 "
                            android:paddingBottom="0dp"
                            android:textColor="@color/mintDark"
                            android:textSize="20sp"
                            android:textStyle="italic" />
                </FrameLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/mint"
                        android:elevation="5dp"
                        android:gravity="center"
                        android:paddingTop="0dp"
                        android:text="Prophylaxis"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/openForm10"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:background="@color/dullWhileOverlay"
                    android:orientation="vertical"
                    android:onClick="openForm10">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/newborn" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:elevation="5dp"
                            android:gravity="center"
                            android:layout_gravity="bottom|left"
                            android:text="Form 11 "
                            android:paddingBottom="0dp"
                            android:layout_marginBottom="0dp"
                            android:textColor="@color/mintDark"
                            android:textSize="20sp"
                            android:textStyle="italic" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/mint"
                        android:elevation="5dp"
                        android:gravity="center"
                        android:paddingTop="0dp"
                        android:text="Newborn Assesment"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <Space
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:id="@+id/openForm15"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:background="@color/dullWhileOverlay"
                    android:orientation="vertical"
                    android:onClick="openForm15">
                    <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/adverse" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:elevation="5dp"
                            android:gravity="center"
                            android:layout_gravity="bottom|left"
                            android:text="Form 15 "
                            android:paddingBottom="0dp"
                            android:textColor="@color/mintDark"
                            android:textSize="20sp"
                            android:textStyle="italic" />
                </FrameLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/mint"
                        android:elevation="5dp"
                        android:gravity="center"
                        android:paddingTop="0dp"
                        android:text="Adverse Event"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/syncServer"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:background="@color/dullWhileOverlay"
                    android:onClick="syncServer"
                    android:orientation="vertical">


                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:src="@drawable/upload" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/mintDark"
                        android:elevation="5dp"
                        android:gravity="center"
                        android:paddingTop="0dp"
                        android:text="Upload Data"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <Space
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:id="@+id/syncDevice"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:background="@color/dullWhileOverlay"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:onClick="syncDevice">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:src="@drawable/download" />




                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/mintDark"
                        android:elevation="5dp"
                        android:gravity="center"
                        android:paddingTop="0dp"
                        android:text="Download Data"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

